<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the main background of your view -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Left border -->
    <item android:left="-5dp" android:top="0dp" android:bottom="0dp" android:right="-5dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="5dp" android:color="@color/basinSlate" />
        </shape>
    </item>
</layer-list>