<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent" /> <!-- Background color of the view -->

    <!-- Define the thickness of the borders -->
    <stroke
        android:width="1dp"
        android:color="@color/basinSlate" /> <!-- Border color -->

    <!-- Optional: You can add padding inside the border if needed -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />

</shape>